{
	"name": "gdvnps-website-v5",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint-staged": "lint-staged",
		"prepare-husky": "husky",
		"fix-folders": "bash -c \"for f in build/*.html; do name=$(basename \\\"$f\\\" .html); mkdir -p build/$name; mv build/$name.html build/$name/index.html; done\""
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{js,ts,scss,css,svelte}": [
			"npm run format"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-conventional": "^19.6.0",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@iconify/svelte": "^4.2.0",
		"@prgm/sveltekit-progress-bar": "^3.0.2",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/adapter-vercel": "^5.5.2",
		"@sveltejs/kit": "^2.20.8",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/jquery": "^3.5.32",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.14.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.3",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.10",
		"svelte": "^5.0.0",
		"svelte-adapter-bun": "^0.5.2",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.0"
	},
	"packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
	"dependencies": {
		"@neondatabase/serverless": "^0.10.4",
		"@sveltejs/adapter-node": "^5.2.12",
		"@tailwindcss/vite": "^4.0.3",
		"@tanstack/svelte-query": "^5.74.4",
		"@tanstack/svelte-query-devtools": "^5.74.6",
		"clsx": "^2.1.1",
		"dotenv": "^16.4.7",
		"jquery": "^3.7.1",
		"runed": "^0.25.0",
		"sass": "^1.83.4",
		"svelte-markdown": "^0.4.1",
		"tailwind-merge": "^3.2.0",
		"tailwindcss": "^4.0.3"
	},
	"trustedDependencies": [
		"@parcel/watcher"
	]
}
